---
interface Props {
  id?: string;
  background?: 'void' | 'primary' | 'secondary';
  padding?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { id, background = 'void', padding = 'md', class: className = '' } = Astro.props;

const bgMap = {
  void: 'bg-ev-void',
  primary: 'bg-ev-primary',
  secondary: 'bg-ev-secondary',
};

const paddingMap = {
  sm: 'py-12 md:py-16',
  md: 'py-16 md:py-24',
  lg: 'py-24 md:py-32',
};
---

<section id={id} class:list={[bgMap[background], paddingMap[padding], className]}>
  <div class="container mx-auto px-4 md:px-6">
    <slot />
  </div>
</section>
