---
import { logoClients } from '../../data/social-proof';
---

<section class="py-12 border-y border-ev-subtle">
  <div class="max-w-6xl mx-auto px-6">
    <p class="text-center text-ev-text-muted text-sm font-medium tracking-wide uppercase mb-8">
      Trusted by forward-thinking teams
    </p>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-8 items-center justify-items-center">
      {logoClients.map((client) => (
        <div
          class="flex items-center justify-center h-10 px-4 grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
          title={client.name}
        >
          <span class="text-lg font-bold tracking-[0.2em] text-ev-text-muted select-none">
            {client.wordmark}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
