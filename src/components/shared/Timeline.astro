---
interface Phase {
  phase: string;
  title: string;
  duration: string;
  description: string;
  deliverables: string[];
}

interface Props {
  phases: Phase[];
}

const { phases } = Astro.props;
---

<div class="space-y-8">
  {phases.map((phase, i) => (
    <div class="relative flex gap-6" data-reveal data-delay={String((i + 1) * 100)}>
      <div class="flex flex-col items-center">
        <div class="w-12 h-12 rounded-full bg-sprout/10 border border-sprout/30 flex items-center justify-center text-sprout font-bold text-sm shrink-0">
          {phase.phase.replace('Phase ', '')}
        </div>
        {i < phases.length - 1 && <div class="w-px flex-1 bg-sprout/20 mt-2" />}
      </div>
      <div class="pb-8 flex-1">
        <div class="flex flex-wrap items-baseline gap-3 mb-2">
          <h3 class="text-xl font-semibold text-ev-text">{phase.title}</h3>
          <span class="text-sprout text-sm font-medium">{phase.duration}</span>
        </div>
        <p class="text-ev-text-secondary mb-4">{phase.description}</p>
        <ul class="grid grid-cols-1 sm:grid-cols-2 gap-2">
          {phase.deliverables.map((item) => (
            <li class="flex items-start gap-2 text-sm text-ev-text-muted">
              <svg class="w-4 h-4 text-sprout shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              {item}
            </li>
          ))}
        </ul>
      </div>
    </div>
  ))}
</div>
