---
import { credentials } from '../../data/social-proof';

const iconPaths: Record<string, string> = {
  'shield': 'M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z',
  'clock': 'M12 2a10 10 0 1 0 0 20 10 10 0 0 0 0-20zm0 18a8 8 0 1 1 0-16 8 8 0 0 1 0 16zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67V7z',
  'briefcase': 'M20 7h-4V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v2H4a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM10 5h4v2h-4V5z',
  'check-circle': 'M12 2a10 10 0 1 0 0 20 10 10 0 0 0 0-20zm-1 15l-5-5 1.41-1.41L11 14.17l7.59-7.59L20 8l-9 9z',
  'users': 'M16 11a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-8 0a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z',
};
---

<section class="py-8 border-t border-ev-subtle">
  <div class="max-w-6xl mx-auto px-6">
    <div class="flex flex-wrap items-center justify-center gap-x-8 gap-y-4">
      {credentials.map((cred) => (
        <div class="flex items-center gap-2 text-ev-text-muted">
          <svg class="w-5 h-5 text-sprout" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[cred.icon]} />
          </svg>
          <span class="text-sm font-medium">{cred.label}</span>
        </div>
      ))}
    </div>
  </div>
</section>
