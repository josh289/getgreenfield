---
import { footerServices, footerCompany, footerConnect } from '../../data/navigation';
import logo from '../../assets/greenfield-logo.png';
---

<footer class="bg-ev-void border-t border-ev-default py-20">
  <div class="container mx-auto px-4 md:px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <!-- Brand -->
      <div>
        <a href="/">
          <img
            src={logo.src}
            alt="Greenfield Labs"
            class="h-20 w-auto object-contain mb-6"
            style="max-width: 400px;"
          />
        </a>
        <p class="text-ev-text-secondary mb-8 max-w-sm leading-relaxed">
          We manufacture production software.
        </p>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold text-ev-text uppercase tracking-wider mb-4">Services</h3>
        <ul class="space-y-3">
          {footerServices.map((link) => (
            <li>
              <a href={link.href} class="text-ev-text-secondary hover:text-sprout transition-colors duration-300">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-sm font-semibold text-ev-text uppercase tracking-wider mb-4">Company</h3>
        <ul class="space-y-3">
          {footerCompany.map((link) => (
            <li>
              <a href={link.href} class="text-ev-text-secondary hover:text-sprout transition-colors duration-300">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h3 class="text-sm font-semibold text-ev-text uppercase tracking-wider mb-4">Connect</h3>
        <ul class="space-y-3">
          {footerConnect.map((link) => (
            <li>
              <a href={link.href} class="text-ev-text-secondary hover:text-sprout transition-colors duration-300">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-ev-default">
      <p class="text-ev-text-muted text-sm text-center">
        &copy; 2026 Greenfield Labs. All rights reserved.
      </p>
    </div>
  </div>
</footer>
